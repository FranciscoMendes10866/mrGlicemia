generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:root@localhost:5050/glicemiaDB"
}

model Profile {
  age       Int
  city      String
  country   String
  firstName String
  id        Int    @default(autoincrement()) @id
  lastName  String
  picture   String
  userId    Int    @unique
  User      User   @relation(fields: [userId], references: [id])
}

model Records {
  createdAt  DateTime @default(now())
  dateTime   String
  glucose    String
  id         Int      @default(autoincrement()) @id
  insulin    String
  medication Boolean
  userId     Int
  User       User     @relation(fields: [userId], references: [id])
}

model User {
  email    String    @unique
  id       Int       @default(autoincrement()) @id
  password String
  Profile  Profile?
  Records  Records[]
}